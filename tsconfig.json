{
  "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "outDir": "./dist/build",
      "types": [
          "node",          
          "express" ,
          "jest",          
      ],
      "esModuleInterop": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "removeComments": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "inlineSources": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false
  },
  "exclude": [
      "./typings",
      "node_modules"
  ]
}